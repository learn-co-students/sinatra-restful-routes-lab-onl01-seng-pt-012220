<h1><%=@recipe.name%></h1>
<p><%=@recipe.ingredients%></p>
<p><b><%=@recipe.cook_time%></b></p>
<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="name">New Name:</label><br>
  <input type="text" name="name"><br>
  <label for="ingredients">New Ingredients:</label><br>
  <input type="text" name="ingredients"><br>
  <label for="cook_time">New Cook Time:</label><br>
  <input type="text" name="cook_time"><br>
  <input type="submit" id="submit">
</form>
